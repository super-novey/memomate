<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_back"
        android:layout_marginBottom="18dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUICKLY LOG IN WITH"
        style="@style/text_bold_upercase"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Google"
            android:layout_weight="1"
            app:strokeColor="@color/light_gray"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="0dp"
            android:layout_marginRight="7dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:drawableLeft="@drawable/ic_google"
            android:padding="8dp"
            android:id="@+id/btnGoogle"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:layout_weight="1"
            app:strokeColor="@color/light_gray"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="0dp"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:drawableLeft="@drawable/ic_facebook"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR LOG IN WITH YOUR EMAIL"
        style="@style/text_bold_upercase"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email or username"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        android:id="@+id/txtEmail"
        android:inputType="textEmailAddress"/>
    <TextView
        android:id="@+id/txtMesssageEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email"
        android:textColor="#FF0000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL OR USERNAME"
        style="@style/text_bold_upercase"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:id="@+id/txtPassWord"/>
    <TextView
        android:id="@+id/txtMessagePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your password"
        android:textColor="#FF0000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        style="@style/text_bold_upercase"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        app:cornerRadius="6dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserratbold"
        android:backgroundTint="@color/blue"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:textSize="11sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"/>

        <TextView
            android:id="@+id/txtForgotUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/montserratbold"
            android:text="username"
            android:textColor="@color/blue"

            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/montserratbold"
            android:text="or"
            android:textColor="@color/gray"

            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtForgotUserName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/montserratbold"
            android:text="password"
            android:textColor="@color/blue"

            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            tools:layout_editor_absoluteX="98dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtForgotPassword"
            app:layout_constraintTop_toTopOf="parent"

            android:textSize="11sp"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>