<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_back"
        android:layout_marginBottom="18dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUICKLY LOG IN WITH"
        style="@style/text_bold_upercase"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Google"
            android:layout_weight="1"
            app:strokeColor="@color/light_gray"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="0dp"
            android:layout_marginRight="7dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:drawableLeft="@drawable/ic_google"
            android:padding="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:layout_weight="1"
            app:strokeColor="@color/light_gray"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="0dp"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:drawableLeft="@drawable/ic_facebook"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR SIGN UP WITH AN EMAIL"
        style="@style/text_bold_upercase"/>

    <EditText
        android:id="@+id/edtBob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:clickable="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE OF BIRTH"
        style="@style/text_bold_upercase"
        android:id="@+id/txtBob"/>

    <EditText
        android:id="@+id/edtEmailSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email or username"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/txtEmailHelper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        style="@style/text_bold_upercase"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*******"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:id="@+id/edtPassSignUp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        style="@style/text_bold_upercase"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/montserratbold"
        android:padding="20dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="6dp"/>

</LinearLayout>