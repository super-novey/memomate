<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VisibleTo"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="18dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/close"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Visible to"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Done"
            android:textSize="16dp"
            />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdgroup">
        <RadioButton
            android:id="@+id/rdbEveryone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Everyone"
            android:button="@drawable/style_radio_button"
            android:paddingLeft="10dp"
            android:background="@drawable/style_card"

            />

        <RadioButton
            android:id="@+id/rdbPeopleWithPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="People with a password"
            android:button="@drawable/style_radio_button"
            android:background="@drawable/style_card"
            android:paddingLeft="10dp"
            />
        <RadioButton
            android:id="@+id/rdbJustMe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Just me"
            android:button="@drawable/style_radio_button"
            android:paddingLeft="10dp"
            android:background="@drawable/style_card"
            />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"/>
</LinearLayout>